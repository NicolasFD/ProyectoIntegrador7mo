    pass

def Ensamblar():
    pass

ventana = Tk()
ventana.geometry("250x300")
ventana.title("Rodolfito")

txtTitulo=Label(ventana,text='Panel de control')
txtTitulo.pack()

txtAccion=Label(ventana,text='Acción a realizar:')
txtAccion.place(x=30,y=30)

Opciones=["Extraer","Pintar","Ensamblar"]
cmbOpciones=Combobox(width="10",values=Opciones,state="readonly")
cmbOpciones.current(0)
cmbOpciones.place(x=130,y=30)

btnRealizar=Button(ventana,text="Realizar",command=cmbOpciones.get())
btnRealizar.place(x=30,y=60)

txtTituloALmacen=Label(ventana,text="Lista de objetos en almacen:")
txtTituloALmacen.place(x=30,y=90)

txtList=Label(ventana,text=almacen.listar(Inventario))
txtList.place(x=30,y=110)

ventana.mainloop()
